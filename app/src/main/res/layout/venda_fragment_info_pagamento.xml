<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".features.venda.ui.fragments.InfoPagamentoVendaFragment">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonContainer">

            <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="60dp"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <include
                        android:id="@+id/fragmentTitle"
                        layout="@layout/activity_main_component_title"
                        app:title="@{@string/registrar_venda}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/informacoes_venda"
                        android:textSize="16sp"
                        android:fontFamily="@font/font_inter"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fragmentTitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="80dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@color/gray_F5F5F5"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/inputData"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/data_venda"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

                                app:endIconMode="custom"
                                app:endIconDrawable="@drawable/icon_calendar"
                                app:endIconContentDescription="Selecionar data no calendÃ¡rio">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editTextData"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="date" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/inputDesconto"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="@string/desconto"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/inputData"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editTextDesconto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="phone"
                                    android:digits=" 0123456789.,R$" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@color/gray_F5F5F5"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/textViewForma"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/forma_pagamento"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textSize="16sp"
                                android:fontFamily="@font/font_jost"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menuSuspensoLayoutFormaPagamento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/selecione_opcao"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/textViewForma"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                    android:id="@+id/autoCompleteTextViewFormaPagamento"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/textViewStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/status_pagamento"
                                android:textSize="16sp"
                                android:fontFamily="@font/font_jost"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/menuSuspensoLayoutFormaPagamento"/>

                            <RadioGroup
                                android:id="@+id/radioGroupStatusPagamento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/textViewStatus">

                                <RadioButton
                                    android:id="@+id/radioConcluido"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/concluido"
                                    android:minHeight="0dp"
                                    android:fontFamily="@font/font_jost"/>

                                <RadioButton
                                    android:id="@+id/radioParcialmente"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/parcialmente_pago"
                                    android:minHeight="0dp"
                                    android:fontFamily="@font/font_jost"/>

                                <RadioButton
                                    android:id="@+id/radioPendente"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/totalmente_pendente"
                                    android:minHeight="0dp"
                                    android:fontFamily="@font/font_jost"/>

                            </RadioGroup>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/containerParcela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@color/gray_F5F5F5"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:visibility="gone">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/textViewMeio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/meio_pagamento"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textSize="16sp"
                                android:fontFamily="@font/font_jost"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menuSuspensoLayoutMeioPagamento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/selecione_opcao"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/textViewMeio"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                    android:id="@+id/autoCompleteTextViewMeioPagamento"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/inputValorPago"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:hint="@string/valor_pago"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/menuSuspensoLayoutMeioPagamento"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editTextValorPago"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="phone"
                                    android:digits=" 0123456789.,R$"/>

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <FrameLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="25sp"
                        android:fontFamily="@font/font_inter">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_exemplo"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="25sp"
                        android:fontFamily="@font/font_inter">
                    </TextView>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonConfirmar"
                    style="@style/FormInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/green_5f8829"
                    android:paddingVertical="10dp"
                    android:text="@string/confirmar_venda"
                    android:textSize="18sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>